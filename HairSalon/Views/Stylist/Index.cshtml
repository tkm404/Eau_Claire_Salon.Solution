@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Meet our Dream Team!</h2>

@if (@Model.Count == 0)
{
  <h3>No Stylists to show.</h3>
}

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}

<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("See all clients", "Index", "Client")</p>
<p>@Html.ActionLink("Back to Home Page", "Index", "Home")</p>