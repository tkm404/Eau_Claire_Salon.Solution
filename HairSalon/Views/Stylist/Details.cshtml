@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Clients.Count == 0)
{
  <h3>This Stylist has no Clients yet!</h3>
}
else
{
  <h3>Clients:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
    }
  </ul>
}


<p>@Html.ActionLink("Edit this Stylist?", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete this Stylist?", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to Stylist list", "Index")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>